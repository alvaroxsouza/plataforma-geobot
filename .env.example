# Configuração do Ambiente Geobot Plataforma Backend
# Copie este arquivo para .env e preencha com suas credenciais

# Ambiente (development, production, testing)
GEOBOT_ENV=development

# Configurações do Banco de Dados
GEOBOT_DB_HOST=localhost
GEOBOT_DB_PORT=5432
GEOBOT_DB_NAME=geobot_db
GEOBOT_DB_USER=postgres
GEOBOT_DB_PASSWORD=sua_senha_aqui

# Configurações da Aplicação
GEOBOT_SECRET_KEY=change-me-in-production-use-strong-random-key
GEOBOT_DEBUG=true
GEOBOT_HOST=0.0.0.0
GEOBOT_PORT=5000

# Configurações de Migrations
GEOBOT_AUTO_RUN_MIGRATIONS=true

# Configurações de Logging
GEOBOT_LOG_LEVEL=DEBUG

